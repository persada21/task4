
        <% @posts.each do |post| %>
<div class ="row">
       <div class='col-md-3'> 
  
 <%=link_to image_tag(post.image.url(:thumb)), post.image.url(:original), :popup=>['original_image',             'height=700,width=900'] %>
        <br>
        <%= link_to '|Show|', post %>
        <%= link_to '|Edit|', edit_post_path(post) %>
        <%= link_to '|Destroy|', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>

    <% end %>




